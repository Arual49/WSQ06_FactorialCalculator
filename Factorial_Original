y = 0
user_again = "y"
x = 0

def fcatorial_calc ():
	z=1
	x = int (input ("Give me an interger "))
	if x==0 :
		z = 1
		print (z)
	elif x >= 1 :
		for y in range(1, x+1):
			z = (z * y)
		print (z)
	elif ValueError:
		print ("That is not a positive interger") 
		
print("Welcome! This time we will calculate the factorial of an interger.")
while user_again == "y" :
	fcatorial_calc ()
	user_again = input ("Do you want to try again? y/n ")
print ("Have a nice day")
